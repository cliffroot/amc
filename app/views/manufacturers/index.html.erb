<h2>Список производителей</h2>
<table>
  <tr>
    <th>Имя</th>
    <th>Поставщик</th>
    <th></th>
    <th></th>
  </tr>

<% @manufacturers.each do |manufacturer| %>
  <tr>
    <td><%= manufacturer.name %></td>
    <td><%= Distributor.find(manufacturer.distributor_id).name %></td>
    <td><%= link_to 'Редактировать', edit_manufacturer_path(manufacturer) %></td>
    <td><%= link_to 'Удалить', manufacturer, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
  </tr>
<% end %>
</table>

